{
  "name": "voxel-dockerclient",
  "version": "0.2.0",
  "description": "An experimental minecraft-like docker client, built using voxel.js.",
  "main": "server.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "build-public": "copyfiles -f node_modules/xterm/dist/xterm.js public/js && copyfiles -f node_modules/xterm/dist/xterm.css public/css",
    "build-debug": "browserify --debug client/main.js -o public/js/client.js",
    "build-docker": "docker build -t voxel-dockerclient .",
    "build-all": "npm run build-public && npm run build-debug && npm run build-docker",
    "run-docker": "docker run --rm --name vdc1 -h vdc1 -v /var/run/docker.sock:/var/run/docker.sock -p 8080:8080 voxel-dockerclient"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/rajch/voxel-dockerclient.git"
  },
  "keywords": [
    "voxel",
    "docker",
    "voxel.js"
  ],
  "author": "Raj Chaudhuri",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/rajch/voxel-dockerclient/issues"
  },
  "homepage": "https://github.com/rajch/voxel-dockerclient#readme",
  "dependencies": {
    "axios": "^0.15.3",
    "shellwords": "^0.1.0",
    "voxel-console": "^1.0.1",
    "voxel-engine": "git+https://github.com/rajch/voxel-engine.git",
    "voxel-fly": "^0.1.2",
    "voxel-keys": "git+https://github.com/rajch/voxel-keys.git",
    "voxel-modal-dialog": "^1.0.1",
    "voxel-player": "^0.1.0",
    "voxel-plugins": "^0.5.0",
    "voxel-walk": "0.0.5",
    "xterm": "^2.2.3"
  },
  "devDependencies": {
    "browserify": "^13.3.0",
    "copyfiles": "^1.0.0"
  }
}
